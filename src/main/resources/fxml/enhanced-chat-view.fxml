<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourgroup.chat.gui.EnhancedChatController">
   <top>
      <!-- 菜单栏 -->
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="文件">
            <items>
              <MenuItem mnemonicParsing="false" text="退出" />
            </items>
          </Menu>

          <Menu mnemonicParsing="false" text="帮助">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="关于" />
              <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" text="设置" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <!-- 主要内容区域 -->
      <SplitPane dividerPositions="0.25" styleClass="main-split-pane">
         <items>
            <!-- 左侧面板：成员列表 -->
            <VBox spacing="5.0" styleClass="member-panel">
               <children>
                  <!-- 成员列表标题 -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="member-header">
                     <children>
                        <Label text="在线成员" styleClass="section-title" />
                        <Label fx:id="memberCountLabel" text="(0)" styleClass="member-count" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
                  
                  <!-- 成员列表 -->
                  <ListView fx:id="memberListView" styleClass="member-list" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ListView>
                  
                  <!-- 操作提示 -->
                  <Label text="双击成员名称打开私聊窗口" styleClass="hint-label">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            
            <!-- 右侧面板：聊天区域 -->
            <VBox spacing="5.0" styleClass="chat-panel">
               <children>
                  <!-- 聊天标题栏 -->
                  <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="chat-header">
                     <children>
                        <Label fx:id="chatTitleLabel" text="群聊" styleClass="chat-title" />
                        <Label fx:id="nodeIdLabel" text="节点ID: 未知" styleClass="node-info" />
                        <Label fx:id="connectionCountLabel" text="连接数: 0" styleClass="connection-info" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
                  
                  <!-- 消息列表 -->
                  <ListView fx:id="messageListView" styleClass="message-list" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ListView>
                  
                  <!-- 消息输入区域 -->
                  <VBox spacing="5.0" styleClass="input-area">
                     <children>
                        <Separator />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextArea fx:id="messageInput" prefRowCount="2" promptText="输入消息... (Enter发送, Shift+Enter换行)" HBox.hgrow="ALWAYS" />
                              <VBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Button fx:id="sendButton" defaultButton="true" onAction="#handleSendMessage" prefWidth="80.0" text="发送" />
                                    <HBox alignment="CENTER" spacing="5.0">
                                       <children>
                                          <Button fx:id="emojiButton" onAction="#handleEmojiButton" prefWidth="50.0" text="表情" />
                                          <Button fx:id="fileButton" onAction="#handleSendFile" prefWidth="50.0" text="文件" />
                                       </children>
                                    </HBox>
                                    <Button fx:id="connectButton" onAction="#handleConnect" prefWidth="80.0" text="连接" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
